{
    "env": {
        "browser": true,
        "es6": true
    },
    "parser": "@html-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@html-eslint/recommended"
    ],
    "plugins": [
        "@html-eslint"
    ],
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "no-console": "off",
        "@html-eslint/require-closing-tags": [
            "error",
            {
                "selfClosing": "always"
            }
        ]
    },
    "globals": {
        "Handlebars": false
    }
}